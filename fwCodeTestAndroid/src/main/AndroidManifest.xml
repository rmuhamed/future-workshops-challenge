<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.futureworkshops.codetest.android">
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:name=".presentation.FwTestApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FwTheme">
    
        <activity
            android:name=".presentation.splashscreen.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/FwTheme.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".presentation.landing.MainActivity"
                android:exported="true"
                android:screenOrientation="portrait"/>
    </application>

</manifest>
